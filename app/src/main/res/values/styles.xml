<resources>

    <style name="bottom_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="bottom_dialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowAnimationStyle">@style/bottom_dialog_animation</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Text" >
        <item name="android:fontFamily">@font/opensans_reg</item>
    </style>

    <style name="Text.Title" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c3</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Text.Title.1">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Title.2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Title.3">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>

    </style>

    <style name="Text.Title.4">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c6</item>
    </style>

    <style name="Text.Body.1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Body.2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body.3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Body.4">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c7</item>
    </style>

    <style name="Text.Info">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Text.ListHeader">
        <item name="android:textColor">@color/c5</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Footer">
        <item name="android:textColor">@color/c7</item>
    </style>

    <style name="Text.Footer.1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Footer.2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Text.Footer.3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Footer.4">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/c3</item>
    </style>


    <style name="Text.Passphrase">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c3</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:background">@drawable/rounded_passphrase_background</item>
    </style>


    <style name="Text.VerifierItem">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/c7</item>
    </style>

    <style name="Text.VerifierItem.Active">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/c6</item>
    </style>

    <style name="Text.VerifierSubItem">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_reg</item>
        <item name="android:textColor">@color/c7</item>
    </style>

    <style name="Text.VerifierSubItem.Active">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/c6</item>
    </style>

    <style name="Text.VerifierSubItem.Active.Error">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/c9</item>
    </style>

    <style name="ButtonTitleWhite">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="RoundedButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_background_light</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedButton.Light">
        <item name="android:background">@drawable/rounded_button_background_light</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="RoundedButton.Red">
        <item name="android:background">@drawable/rounded_button_background_grey</item>
        <item name="android:textColor">@color/c9</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedButton.NoBorder">
        <item name="android:background">@drawable/rounded_button_background_no_border</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="RoundedButton.Dark">
        <item name="android:background">@drawable/rounded_button_background_dark</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/c3</item>
    </style>


    <!-- vvv OLD vvv -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/BlueActionBar</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/LearningMachineTextView</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_up_blue</item>
        <item name="actionBarStyle">@style/WhiteActionBar</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/LearningMachineTextView</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/c10</item>
    </style>

    <!--No Toolbar Theme-->
    <style name="NoToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/LearningMachineTextView</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="BlueActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorBlueActionBar</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorBlueActionBar</item>
    </style>

    <style name="WhiteActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorWhiteActionBar</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorWhiteActionBar</item>
        <item name="titleTextStyle">@style/WhiteActionBarTextStyle</item>
    </style>

    <style name="NoToolbarTheme.Splash">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="NoToolbarTheme.Video">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="NoToolbarTheme.Onboarding">
        <item name="buttonStyle">@style/RoundedButton</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="editTextStyle">@style/OnboardingPassphraseEditText</item>
    </style>

    <style name="WhiteActionBarTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorBlueDarkTextTitle</item>
    </style>

    <!-- Base -->

    <style name="LearningMachineTextView" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="LearningMachineTextView.Medium" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="LearningMachineDialog" parent="AlertDialog.AppCompat">
    </style>

    <!-- Spec -->

    <style name="Material.Title" parent="LearningMachineTextView.Medium">
        <item name="android:textSize">@dimen/material_title_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_title_line_spacing_extra</item>
    </style>

    <style name="Material.Title.Light">
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Title.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/text_style_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_style_line_spacing_extra</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Material.Light.Subhead" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_subhead_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_subhead_line_spacing_extra</item>
        <item name="android:textColor">@color/black_8a</item>
    </style>

    <style name="Material.Light.Subhead.Secondary">
        <item name="android:textColor">@color/black_8a</item>
    </style>

    <style name="Material.Light.Subhead.Disabled">
        <item name="android:textColor">@color/black_61</item>
    </style>

    <style name="Material.Desktop.Light.Menu" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_desktop_light_menu_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_desktop_light_menu_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Body2" parent="LearningMachineTextView.Medium">
        <item name="android:textSize">@dimen/material_light_body2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_body2_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Body1" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_body1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_body1_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Light.Body1.Secondary">
        <item name="android:textColor">@color/black_8b</item>
    </style>

    <style name="Material.Light.Caption" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_caption_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_caption_line_spacing_extra</item>
        <item name="android:textColor">@color/black_de</item>
    </style>

    <style name="Material.Bold.TextButton" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_body1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/material_light_body1_line_spacing_extra</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom -->

    <style name="Settings.Header" parent="LearningMachineTextView.Medium">
        <item name="android:textSize">@dimen/fragment_settings_header_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/fragment_settings_header_line_spacing_extra</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingStart">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
    </style>

    <style name="Settings.TextView" parent="TextStyle">
        <item name="android:paddingTop">@dimen/fragment_settings_textview_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_textview_padding_bottom</item>
        <item name="android:paddingStart">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_add_issuer_linear_layout_padding_horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="IssuerInfo.Header" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_body1_text_size</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingBottom">@dimen/issuer_info_textview_padding_bottom</item>
    </style>

    <style name="CertificateInfo.Header" parent="LearningMachineTextView">
        <item name="android:textSize">@dimen/material_light_body1_text_size</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingBottom">@dimen/issuer_info_textview_padding_bottom</item>
    </style>

    <style name="Material.Light.Body1.OnboardingPassphraseField">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OnboardingPassphraseEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
